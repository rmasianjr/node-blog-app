extends layout

include mixins/_postCard
include mixins/_pagination

block content
  .container
    section.section
      p.title.has-text-primary.is-uppercase.is-size-4-mobile= title
      .columns.is-multiline
        each post in posts
          .column.is-4-desktop.is-6-tablet.is-flex-tablet
            +postCard(post)
      +pagination(page, pages)