doctype html
html
  head
    title= `${title} | Scratch Paper`
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="stylesheet" href="/css/lib/bulma.min.css")
    link(rel="stylesheet" href="/css/lib/fontawesome-all.min.css")
    link(href="https://fonts.googleapis.com/css?family=Gugi" rel="stylesheet")
    link(rel="stylesheet" href="/css/styles.css")
  body.has-background-white-ter
    block header
      nav.navbar.is-primary
        .navbar-brand
          a.navbar-item.navbar-item--text-styled.navbar-item--no-padding-TB.is-size-4-mobile.is-size-3-tablet.is-uppercase.has-text-weight-bold(href="/") SP
          .navbar-item.navbar-item--shrink
            form(action="/posts/search" method="POST")
              .field.has-addons
                .control
                  input.input(type="text" name="text" placeholder="Search blogpost..." required)
                .control
                  button.button.is-info
                    span.icon
                      i.fab.fa-sistrix
          a.navbar-burger.has-text-light
            span
            span
            span
        .navbar-menu.is-size-7-mobile
          .navbar-end
            if user
              a.navbar-item(href="/posts")
                span.icon
                  i.fas.fa-home
                span Home
              a.navbar-item(href="/posts/myposts")
                span.icon
                  i.fas.fa-book
                span My Posts
              a.navbar-item(href="/posts/new")
                span.icon
                  i.far.fa-edit
                span Create Post
              a.navbar-item(href="/auth/logout")
                span.icon
                  i.fas.fa-sign-out-alt
                span Logout
            else
              a.navbar-item(href="/auth/signup")
                span.icon
                  i.fas.fa-user-plus
                span &nbsp; Sign up
              a.navbar-item(href="/auth/signin")
                span.icon
                  i.fas.fa-sign-in-alt
                span &nbsp; Sign in

    block messages
      if messages && Object.keys(messages).length > 0
          .container.is-overlay
            - const flashCategories = Object.keys(messages)
            each category in flashCategories
              each message in messages[category]
                .message(class=`is-${category}`).is-size-7-mobile
                  .message-body.message-body--bordered
                    button.delete.is-pulled-right(onClick="this.parentElement.remove()")
                    != message
     
    block content

    block scripts
      script(src="/js/script.js")