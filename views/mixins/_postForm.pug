mixin postForm()
  form(action="/posts" method="POST" enctype="multipart/form-data")
    .field
      label.label Title
      .control
        input.input(type="text" name="title" placeholder="Post Title..")
    .field
      label.label Photo
      .control
        input.input(type="file" name="image" accept="image/gif, image/png, image/jpeg")
    .field
      label.label Description
      .control
        textarea.textarea(name="description" placeholder="Tell more about the post....")
    .field
      .control
        button.button.is-link Submit