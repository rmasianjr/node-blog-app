mixin commentForm(post)
  .media
    figure.media-left
      p.image
        img(src=`${user.gravatar}&d=robohash`, alt="user avatar")
    .media-content
      form(action=`/posts/${post._id}/comments` method="POST")
        .field
          .control
            textarea.textarea(name="text" placeholder="Add a comment...")
        .field
          .control
            button.button.is-info Post comment